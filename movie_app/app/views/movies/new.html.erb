<h1>New Movie</h1>

<%= form_with model: @movie, local: true do |f| %>
  <% if @movie.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errors:</h4>
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= f.label :director, class: "form-label" %>
    <%= f.text_field :director, class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= f.label :release_year, class: "form-label" %>
    <%= f.number_field :release_year, class: "form-control" %>
  </div>

  <%= f.submit "Create Movie", class: "btn btn-success" %>
<% end %>
